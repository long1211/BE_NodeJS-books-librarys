extends ../layouts/layout

block content
 div.container
  h2='Author: '+ author.name
  div.edit_
   a(href='/authors/'+author.id +'/edit', style='text-decoration: none; padding: 0 5px; font-size: 16px; display:flex') Edit
   include ../partials/deleteForm  
  if booksByAuthor.length > 0
   h2(style='text-align:center; margin-bottom:30px') Books By Author
   each book in booksByAuthor
     .col-md-3.col-sm-3.col-lg-3.col-xs-6
        a(href='/books/'+book.id style='text-decoration:none')
         img( class='img',src=book.coverImgpath)
         h2(style='color:#333')=book.title